    <!-- Widget Script -->
    <script>
        const aInput = document.getElementById('coeff-a');
        const bInput = document.getElementById('coeff-b');
        const cInput = document.getElementById('coeff-c');
        const sumResult = document.getElementById('sum-result');
        const productResult = document.getElementById('product-result');

        function calculate() {
            const a = parseFloat(aInput.value) || 0;
            const b = parseFloat(bInput.value) || 0;
            const c = parseFloat(cInput.value) || 0;

            if (a === 0) {
                sumResult.textContent = 'N/A';
                productResult.textContent = 'N/A';
                return;
            }

            const sum = -b / a;
            const product = c / a;

            sumResult.textContent = sum.toFixed(2);
            productResult.textContent = product.toFixed(2);
        }

        aInput.addEventListener('input', calculate);
        bInput.addEventListener('input', calculate);
        cInput.addEventListener('input', calculate);

        // Initial calculation
        calculate();
    </script>
